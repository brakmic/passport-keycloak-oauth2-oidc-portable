{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "samples",
    "outDir": "dist/samples",
    "composite": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "paths": {
      "../src/*": ["../lib/*"]
    },
    "tsBuildInfoFile": "tsconfig.samples.tsbuildinfo"
  },
  "include": ["samples/**/*.ts"],
  "references": [
    { "path": "./tsconfig.src.json" }
  ]
}
